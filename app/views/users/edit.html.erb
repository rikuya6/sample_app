<% provide(:title, 'Edit user') %>
<% provide(:button_text, 'Create my account') %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to 'Change', 'http://gravatar.com/emails', target: '_blank' %>
    </div>
  </div>
</div>
